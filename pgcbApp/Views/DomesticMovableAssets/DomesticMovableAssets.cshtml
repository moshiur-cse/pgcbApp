
@{
    ViewBag.Title = "DomesticMovableAssets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h2 style="text-align: center">12. Intangible Assets</h2>

<form id="myform" name="myform" class="form-horizontal" method="POST">

    <table class="table table-bordered table-responsive table-hover" id="showTable">
        <thead style="background: black;color: white">
            <tr>
                <td style="display: none">Id</td>
                <td>Type </td>
                <td>Number</td>
                <td>Approximate value (Taka)</td>
                <td>
                    <button id="btnAdd" class="btn btn-success" type="button">+</button>
                    <button id="btnRemove" class="btn btn-success" type="button">-</button>
               </td>
            </tr>
        </thead>
        <tbody id="tbody">
            
               
            
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-8">
        </div>

        <div class="col-md-4">
            <input type="submit" id="submit" name="submit" style="background: black" class="btn-success form-control" value="Save" />
        </div>

    </div>&nbsp;
    @*<label name="messageLabel" style="color:darkblue ">@message</label>*@
</form>

@section scripts
{
    
<script type="text/javascript">

    $(document).ready(function () {
        addRow(0);
        localStorage.setItem('index', 1);

        $("#btnAdd").click(function () {
            var i = Number(localStorage.index);

            addRow(i);

            localStorage.setItem('index', i + 1);
        });
        $("#btnRemove").click(function () {
            removeRow();
        });
    });
    function removeRow() {
        var i = Number(localStorage.index) - 1;
        if (i>0) {
            $("#" + i).remove();
        }


        localStorage.setItem('index', i);
    }

    function addRow(i) {

        var str = '<tr id=' + i + '>' +
            '<td style="display: none"><input type="text" class="form-control" id="data[' + i + '].BasicInformationOfAffectedPersonNid" name="data[' + i + '].BasicInformationOfAffectedPersonNid" value="@(ViewContext.RouteData.Values["id"])" readonly/></td>' +
            '<td>' +
            '<select class="form-control" name="data[' + i + '].InstitutionTypes" id="data[' + i + '].InstitutionTypes">' +
            '<option value="">...Select...</option>' +
            '<option value="Kancha house">Kancha house</option>' +
            '<option value="CI sheets House">CI sheets House</option>' +
            '<option value="Semi Pucca House">Semi Pucca House</option>' +
            '<option value="Pucca House – one storied">Pucca House – one storied</option>' +
            '<option value="Pucca House – two storied">Pucca House – two storied</option>' +
            '<option value="Pucca House – three storied">Pucca House – three storied</option>' +
            '<option value="Shops">Shops</option>' +
            '<option value="Industries">Industries</option>' +
            '<option value="Others">Others</option>' +
            '</select>' +
            '</td>' +
            '<td><input type="text" class="form-control" id="data[' + i + '].Numbers" name="data[' + i + '].Numbers" placeholder="Numbers" /></td>' +
            '<td><input type="text" class="form-control" id="data[' + i + '].TentativeAmount" name="data[' + i + '].TentativeAmount" placeholder="Tentative Amount" /></td>' +
            '</tr>';
        $("#tbody").append(str);

    }
    </script>
        }
