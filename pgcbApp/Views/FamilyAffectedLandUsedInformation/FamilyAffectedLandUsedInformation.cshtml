    $(document).ready(function () {
        addRow(0);
        localStorage.setItem('index', 1);

        $("#btnAdd").click(function () {
            var i = Number(localStorage.index);

            addRow(i);

            localStorage.setItem('index', i + 1);
        });
        $("#btnRemove").click(function () {
            removeRow();
        });
    });
    function removeRow() {
